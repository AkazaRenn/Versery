<?xml version="1.0" encoding="utf-8"?>
<winex:WindowEx
    x:Class="View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:winex="using:WinUIEx"
    xmlns:controls="using:View.Controls"
    xmlns:pages="using:View.Pages"
    Title="MainWindow"
    MinWidth="400"
    MinHeight="400">

    <winex:WindowEx.SystemBackdrop>
        <MicaBackdrop/>
    </winex:WindowEx.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <NavigationView
            x:Name="Navigation"
            Grid.Column="0"
            PaneDisplayMode="Top"
            IsBackButtonVisible="Visible"
            IsSettingsVisible="False"
            ItemInvoked="Navigation_ItemInvoked"
            BackRequested="Navigation_BackRequested"
            Loaded="Navigation_Loaded">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Uid="MainWindow_NavigationViewItem_Home"
                    Tag="{x:Bind pages:Home.Type}"/>
                <NavigationViewItem
                    x:Uid="MainWindow_NavigationViewItem_Notifications"
                    Tag="{x:Bind pages:Login.Type}"/>
                <NavigationViewItem
                    Icon="Refresh"
                    x:Name="TestPage"/>
                <NavigationViewItem
                    Icon="Download"
                    Tag="SamplePage4"/>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItemHeader
                    x:Name="Navigation_RightPadding"/>
            </NavigationView.FooterMenuItems>
        </NavigationView>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <controls:UserProfileButton
                x:Name="UserProfileButton"
                Grid.Column="1"
                Padding="0"
                Width="32"
                Height="32"
                CornerRadius="16"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
        </Grid>
        <Frame
            x:Name="Frame"
            Grid.Row="1"
            Navigated="Frame_Navigated"/>
    </Grid>
</winex:WindowEx>
